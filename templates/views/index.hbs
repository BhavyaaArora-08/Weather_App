            <table>
                <tr id="rs">
                    <td class="first"> <label for="city">City</label> </td>
                    <td><input type="text" placeholder="city.." name="city"></input></td>
                </tr>
                <tr id="rs">
                    <td class="first"> <label for="country">Country</label></td>
                    <td><input type="text" placeholder="country.." name="country"></input></td>
                </tr>
            </table>
